---
import { Image } from "astro:assets";
import logo from "@/assets/logo.png";
import footerDecor from "@/assets/footer-decor.png";
import { useTranslations, type Lang } from "@/i18n";

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<footer class="bg-[#f0ece4] border-t border-[#d6cdb8] ">
  <div class="container py-6 relative">
    <div class="flex flex-col lg:flex-row items-center justify-between gap-6 mb-4">
      <div class="flex flex-col md:flex-row items-center gap-5 md:gap-10">
        <Image src={logo} alt="Royal Forwarding" class="w-25 h-auto" />
        <p class=" text-black" set:html={t("footer.copyright")} />
        <a href="tel:+99999999999" class="text-black hover:text-primary transition-colors">+ 999 99 999 999 99</a>
        <a href="mailto:pochta@mail.com" class="text-black hover:text-primary transition-colors">@pochta</a>
      </div>
    </div>

    <nav class="flex flex-wrap items-center justify-center lg:justify-start gap-x-10 gap-y-2 pt-4 border-t border-[#d6cdb8]">
      <a href="#about" class=" text-black hover:text-primary transition-colors">{t("footer.aboutCompany")}</a>
      <a href="#services" class=" text-black hover:text-primary transition-colors">{t("footer.services")}</a>
      <a href="#contacts" class=" text-black hover:text-primary transition-colors">{t("footer.contacts")}</a>
      <a href="#privacy" class=" text-black hover:text-primary transition-colors">{t("footer.privacy")}</a>
      <a href="#sitemap" class=" text-black hover:text-primary transition-colors">{t("footer.sitemap")}</a>
    </nav>

      <Image src={footerDecor} alt="" class="absolute bottom-0 right-0 max-w-[150px] hidden md:block" aria-hidden="true" />
  </div>

</footer>
