---
import { Image } from "astro:assets";
import SwiperCarousel from "./SwiperCarousel.astro";
import suppliersImg from "@/assets/logistics/suplies.png";
import customsImg from "@/assets/logistics/customs.png";
import routesImg from "@/assets/logistics/routes.png";
import analyticsImg from "@/assets/logistics/analytics.png";
import transportImg from "@/assets/logistics/transport.png";
import decorImg from "@/assets/logistics/decor.png";
import { useTranslations, type Lang } from "@/i18n";

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const highlights = [
  { name: t("trade.suppliers"), image: suppliersImg },
  { name: t("trade.customs"), image: customsImg },
  { name: t("trade.routes"), image: routesImg },
  { name: t("trade.analytics"), image: analyticsImg },
  { name: t("trade.transport"), image: transportImg },
];

const advantages = [
  t("trade.adv1"),
  t("trade.adv2"),
  t("trade.adv3"),
  t("trade.adv4"),
  t("trade.adv5"),
  t("trade.adv6"),
];
---

<section class="py-10 md:py-20 border-b border-gray-200">
  <div class="container relative">

    <div class="mb-10 space-y-5">
      <h2 class="text-3xl md:text-5xl font-bold text-[#916a2a]">{t("trade.title")}</h2>
      <p class="text-lg md:text-xl font-semibold text-[#b79647]">{t("trade.subtitle")}</p>

      <div class="space-y-5 md:text-lg font-medium">
        <p>{t("trade.p1")}</p>
        <p>{t("trade.p2")}</p>
      </div>
    </div>


    <h3 class="text-2xl md:text-3xl font-bold text-[#916a2a] mb-10">{t("trade.highlightsTitle")}</h3>
    <SwiperCarousel slides={highlights} class="interior-styles-swiper" />


    <h3 class="text-2xl md:text-3xl font-bold text-[#916a2a] mb-5">{t("trade.advantages")}</h3>
    <ul class="grid md:grid-cols-2 gap-y-1 mb-8 md:mb-12">
      {
        advantages.map((advantage) => (
          <li class="flex items-start gap-2 md:text-lg font-medium">
            <span class="mt-2.5 w-1.5 h-1.5 rounded-full bg-black shrink-0" />
            {advantage}
          </li>
        ))
      }
    </ul>

    <div class="grid lg:grid-cols-[2fr_1fr] gap-10 items-center">
      <div class="mt-16">
        <h3 class="text-2xl md:text-3xl font-bold text-[#916a2a] mb-6">{t("trade.networkTitle")}</h3>
        <p class="md:text-lg font-medium">{t("trade.networkDesc")}</p>
      </div>

      <div class="relative flex justify-center lg:justify-end">
        <div class="relative z-10 w-full max-w-[250px]">
          <Image src={decorImg} alt="Our Network" class="w-full h-auto" />
        </div>
      </div>
    </div>
  </div>
</section>
