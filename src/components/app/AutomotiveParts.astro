---
import { Image } from "astro:assets";
import SwiperCarousel from "./SwiperCarousel.astro";
import bearingsImg from "@/assets/parts/bearings.png";
import brakesImg from "@/assets/parts/brakes.png";
import engineImg from "@/assets/parts/engine.png";
import suspensionsImg from "@/assets/parts/suspenstions.png";
import wheelsImg from "@/assets/parts/wheels.png";
import { useTranslations, type Lang } from "@/i18n";

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const components = [
  { name: t("auto.bearings"), image: bearingsImg },
  { name: t("auto.brakes"), image: brakesImg },
  { name: t("auto.engines"), image: engineImg },
  { name: t("auto.suspension"), image: suspensionsImg },
  { name: t("auto.wheels"), image: wheelsImg },
];

const advantages = [
  t("auto.adv1"),
  t("auto.adv2"),
  t("auto.adv3"),
  t("auto.adv4"),
  t("auto.adv5"),
];
---

<section class="py-10 md:py-20 border-b border-gray-200">
  <div class="container relative">
    <div class="mb-10 space-y-5">
      <h2 class="text-3xl md:text-5xl font-bold text-[#916a2a]">{t("auto.title")}</h2>
      <p class="text-lg md:text-xl font-semibold text-[#b79647]">{t("auto.subtitle")}</p>

      <div class="space-y-5 md:text-lg font-medium">
        <p>{t("auto.p1")}</p>
        <p>{t("auto.p2")}</p>
      </div>
    </div>

    <h3 class="text-2xl md:text-3xl font-bold text-[#916a2a] mb-10">{t("auto.componentsTitle")}</h3>
    <SwiperCarousel slides={components} class="interior-styles-swiper" />

    <h3 class="text-2xl md:text-3xl font-bold text-[#916a2a] mb-5">{t("auto.advantages")}</h3>
    <ul class="grid md:grid-cols-2 gap-y-1">
      {
        advantages.map((advantage) => (
          <li class="flex items-start gap-2 md:text-lg font-medium">
            <span class="mt-2.5 w-1.5 h-1.5 rounded-full bg-black shrink-0" />
            {advantage}
          </li>
        ))
      }
    </ul>

    <div class="grid lg:grid-cols-[2fr_1fr] gap-10 items-center">
      <div class="mt-16">
        <h3 class="text-2xl md:text-3xl font-bold text-[#916a2a] mb-6">{t("auto.coverageTitle")}</h3>
        <p class="md:text-lg font-medium">{t("auto.coverageDesc")}</p>
      </div>

      <div class="relative flex justify-center lg:justify-end">
        <div class="relative z-10 w-full max-w-sm">
          <Image src={import("@/assets/parts/decor.png")} alt="Interior Design Service" class="w-full h-auto" />
        </div>
      </div>
    </div>
  </div>
</section>
