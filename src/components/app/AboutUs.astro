---
import { Image } from "astro:assets";
import teamImg from "@/assets/about/2.png";
import logisticsImg from "@/assets/about/1.png";
import { useTranslations, type Lang } from "@/i18n";

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section class="py-10 md:py-20 overflow-hidden" style="background: linear-gradient(135deg, #916a2a 0%, #936C2C 51%, #B79647 75%, #DBD286 100%);">
  <div class="container relative">
    <div class="grid lg:grid-cols-2 gap-5 items-start">
      <div class="space-y-5">
        <h2 class="text-3xl md:text-5xl font-bold text-[#d4ff80]">{t("about.title")}</h2>

        <div class="bg-[rgba(0,0,0,0.2)] rounded-lg p-8 space-y-6">
          <p class="md:text-lg text-white font-medium">{t("about.p1")}</p>
          <p class="md:text-lg text-white font-medium">{t("about.p2")}</p>
        </div>

        <div class="rounded-lg overflow-hidden">
          <Image src={logisticsImg} alt="International Logistics" class="w-full h-auto" />
        </div>
      </div>

      <div class="space-y-5">
        <div class="rounded-lg overflow-hidden">
          <Image src={teamImg} alt="Our Team" class="w-full h-auto" />
        </div>

        <div class="bg-[rgba(0,0,0,0.2)] rounded-lg p-8">
          <p class="md:text-lg text-white font-medium">{t("about.p3")}</p>
        </div>

        <button class="w-full bg-white text-[#916a2a] font-bold py-3 px-6 rounded-lg hover:bg-gray-100 transition-colors"> {t("about.learnMore")} </button>
      </div>
    </div>
  </div>
</section>
