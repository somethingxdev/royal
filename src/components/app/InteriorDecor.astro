---
import { Image } from "astro:assets";
import SwiperCarousel from "./SwiperCarousel.astro";
import loftImg from "@/assets/interior/loft.png";
import scandiImg from "@/assets/interior/scandi.png";
import minimalImg from "@/assets/interior/minimalim.png";
import provinceImg from "@/assets/interior/province.png";
import neoclassicImg from "@/assets/interior/neoclassic.png";
import designImg from "@/assets/design.png";
import { useTranslations, type Lang } from "@/i18n";

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const styles = [
  { name: t("interior.loft"), image: loftImg },
  { name: t("interior.scandinavian"), image: scandiImg },
  { name: t("interior.minimalism"), image: minimalImg },
  { name: t("interior.provence"), image: provinceImg },
  { name: t("interior.neoclassical"), image: neoclassicImg },
];

const advantages = [
  t("interior.adv1"),
  t("interior.adv2"),
  t("interior.adv3"),
  t("interior.adv4"),
  t("interior.adv5"),
];
---

<section class="py-10 md:py-20 border-b border-gray-200">
  <div class="container relative">
   
    <div class="mb-10 space-y-5">
      <h2 class="text-3xl md:text-5xl font-bold text-[#916a2a]">{t("interior.title")}</h2>
      <p class="text-lg md:text-xl font-semibold text-[#b79647]">{t("interior.subtitle")}</p>

      <div class="space-y-5 md:text-lg font-medium">
        <p>{t("interior.p1")}</p>
        <p>{t("interior.p2")}</p>
      </div>
    </div>

  
    <h3 class="text-2xl md:text-3xl font-bold text-[#916a2a] mb-5 md:mb-10">{t("interior.stylesTitle")}</h3>
    <SwiperCarousel slides={styles} class="interior-styles-swiper" />
   

    <h3 class="text-2xl md:text-3xl font-bold text-[#916a2a] mb-5 md:mb-8">{t("interior.advantages")}</h3>
    <ul class="grid grid-cols-1 md:grid-cols-2 gap-y-1">
      {
        advantages.map((advantage) => (
          <li class="flex items-start gap-2 md:text-lg font-medium">
            <span class="mt-2.5 w-1.5 h-1.5 rounded-full bg-black shrink-0" />
            {advantage}
          </li>
        ))
      }
    </ul>

    <div class="grid lg:grid-cols-[2fr_1fr] gap-10 items-center">
      <div class="mt-16">
        <h3 class="text-2xl md:text-3xl font-bold text-[#916a2a] mb-6">{t("interior.designTitle")}</h3>
        <p class="md:text-lg font-medium">{t("interior.designDesc")}</p>
      </div>

      <div class="relative flex justify-center lg:justify-end">
        <div class="relative z-10 w-full max-w-sm">
          <Image src={designImg} alt="Interior Design Service" class="w-full h-auto" />
        </div>
      </div>
    </div>
  </div>
</section>
