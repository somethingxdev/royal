---
import { Image } from "astro:assets";
import furnitureImg from "@/assets/services/furniture.png";
import automotiveImg from "@/assets/services/automotive.png";
import tradeImg from "@/assets/services/trade.png";
import servicesData from "@/data/services_all.yaml";

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const data = servicesData[lang];
const images = [furnitureImg, automotiveImg, tradeImg];
---

<section id="services" class="py-10 md:py-20 border-b border-gray-200">
  <div class="container">
    <div class="mb-8 md:mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-[#916a2a] mb-6">{data.title}</h2>
      <p class="text-lg md:text-xl md:max-w-2xl ">{data.subtitle}</p>
    </div>

    <div class="space-y-12">
      {
        data.cards.map((card: { title: string; subtitle: string; button: string; description: string; advantagesLabel?: string; advantages?: { text: string }[]; extraDescription?: string; footerLabel?: string; footerValue?: string }, index: number) => (
          <div class="grid md:grid-cols-[1fr_2fr] items-stretch gap-5">
            <div class="relative flex items-start h-auto gap-2">
              <div class="size-15 bg-linear-to-b from-[#956e2d] to-[#b79647] z-10 hidden md:block rounded-sm opacity-80 shrink-0 sticky top-5" />
              <div class="rounded-sm overflow-hidden shadow-lg h-60 w-full md:size-full">
                <Image src={images[index]} alt={card.title} class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" />
              </div>
            </div>

            <div class="bg-primary-light p-5 md:p-8 rounded-sm relative">
              <div class="flex flex-col md:flex-row md:items-start justify-between gap-4 mb-6">
                <div>
                  <h3 class="text-2xl md:text-3xl font-bold text-[#916a2a] mb-1">{card.title}</h3>
                  <p class="md:text-xl font-semibold text-[#b79647] opacity-80">{card.subtitle}</p>
                </div>
                <button class="service-button self-start px-6 py-2 text-sm font-bold text-white rounded-sm uppercase tracking-wider transition-all hover:brightness-110">{card.button}</button>
              </div>

              <p class="mb-8  md:text-lg font-medium">{card.description}</p>

              {card.advantages && card.advantages.length > 0 && (
                <div class="mb-8">
                  <h4 class="text-[#916a2a] font-bold text-xl mb-4">{card.advantagesLabel}</h4>
                  <ul class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-2">
                    {card.advantages.map((adv: { text: string }) => (
                      <li class="flex items-center gap-2 font-medium md:text-lg">
                        <span class="w-1.5 h-1.5 rounded-full bg-[#916a2a]" />
                        {adv.text}
                      </li>
                    ))}
                  </ul>
                </div>
              )}

              {card.extraDescription && (
                <div class="bg-[#b79647] p-4 rounded-sm text-white">
                  <p class="text-white/90 leading-tight">{card.extraDescription}</p>
                </div>
              )}

              {card.footerLabel && card.footerValue && (
                <div class="mt-4">
                  <h4 class="text-[#916a2a] font-bold md:text-lg inline">{card.footerLabel}</h4>
                  <p class="text-gray-800 font-medium inline ml-2 md:text-lg">{card.footerValue}</p>
                </div>
              )}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .service-button {
    background: linear-gradient(163deg, #956e2d 0%, #b79647 25.95%, #b59445 76.55%, #956e2d 100%);
    box-shadow: 0 2px 10px rgba(145, 106, 42, 0.2);
  }
</style>
