import Services from "@/components/app/Services.astro";
import InteriorDecor from "@/components/app/InteriorDecor.astro";
import AutomotiveParts from "@/components/app/AutomotiveParts.astro";
import OtherGoods from "@/components/app/OtherGoods.astro";
