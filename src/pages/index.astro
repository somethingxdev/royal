---
import Hero from '@/components/base/Hero.astro';
import Services from '@/components/base/Services.astro';
import ServiceSection from '@/components/base/ServiceSection.astro';
import HowWeWork from '@/components/base/Work.astro';
import AboutUs from '@/components/base/About.astro';
import Layout from '@/layouts/Layout.astro';
import { getServiceSections } from '@/utils/serviceSections';

const lang = Astro.currentLocale || 'en';

const serviceSections = getServiceSections(lang);
---

<Layout>
  <Hero lang={lang} />
  <Services lang={lang} />
  {serviceSections.map((section) => <ServiceSection lang={lang} data={section} />)}
  <AboutUs lang={lang} />
  <HowWeWork lang={lang} />
</Layout>
